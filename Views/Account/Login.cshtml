@model LoginDto

@{
    string password = "SDG%$@5423sdgagSDert";
}


<div class="centerxy">
    <div class="db">
        <h3 class="mb-50">@password</h3>
        <h1 class="centerx mb-50">Logowanie do systemu</h1>
        <div class="login-container">

            <form method="post" asp-action="Login" asp-controller="Account" class="login-form">
                <div as asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <div class="w-150px">
                        <label asp-for="Email"></label>
                    </div>
                    <input asp-for="Email" class="form-input" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="w-150px">
                        <label asp-for="Password"></label>
                    </div>
                    <input asp-for="Password" value="@password" class="form-input" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <input type="submit" value="Zaloguj" class="login-btn" />

            </form>

            <a asp-action="ForgotPassword" asp-controller="Account" class="mt-10">Przypomnij hasło</a>
        </div>
        <!-- Zwraca komunikat błędu, o ile takowy się pojawi -->
        <span class="c-red">@ViewData["ErrorMessage"]</span>

    </div> 
</div>


