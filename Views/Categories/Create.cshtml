@model CreateCategoryDto

<div class="dodawanieHeader">
    <span class="titleHeader">Tworzenie nowej kategorii</span>
    <span class="descriptionHeader">Kategorie występują w filmach, wypełnij poniższe pola i kliknij przycisk Dodaj, aby dodać nową pozycję</span>
</div>

<form method="post" asp-action="Create" asp-controller="Categories">



    <!-- tabela zawartości -->
    <table style="border: none; box-shadow: none;">
        <tr style="border: none;">
            <td class="leftColumns" style="border: none;">
                <div style="text-align: right">
                    <span>Nazwa</span>
                </div>
            </td>
            <td class="rightColumnw" style="border: none;">
                <div class="db">
                    <input asp-for="Name" />
                    <span asp-validation-for="Name" class="c-red"></span>
                </div>
            </td>
        </tr>
    </table>


    <!-- dolne przyciski -->
    <div class="w-100 df-sb mt-30 mb-40">
        <a asp-action="Index" asp-controller="Categories" class="buttonWstecz w-100px">Wstecz</a>
        <div class="df">
            <input type="submit" value="Zapisz" class="buttonEdit w-100px" />
            <a asp-action="Index" asp-controller="Categories" class="buttonAnuluj w-100px ml-2">Anuluj</a>
        </div>
    </div>

</form>


<!-- Zwraca komunikat błędu, o ile takowy się pojawi -->
<span class="c-red">@ViewData["ErrorMessage"]</span>