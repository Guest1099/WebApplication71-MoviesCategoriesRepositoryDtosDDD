
@{
    var movies = Context.Movies.ToList ();
    var categories = Context.Categories.ToList ();
    var logowania = Context.Logowania.ToList ();
}

<div class="w-250px pr">
    <div class="w-250px">
        <div class="w-250px db leftNavigation">

            <div class="db p-10 mt-20 mb-30">
                <p style="font-size: 40px; font-weight: bold;">Movies</p>
                <p style="font-size: 20px; margin-left: 20px;">management</p>
            </div>

            <ul>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="buttonEdit">Home</a>
                    <a asp-area="" asp-controller="Movies" asp-action="Index" class="buttonDelete">Movies (@movies.Count)</a>
                    <a asp-area="" asp-controller="Categories" asp-action="Index" class="buttonEdit">Categories (@categories.Count)</a>
                    <a asp-area="" asp-controller="Logowania" asp-action="Index" class="buttonEdit">Historia logowań (@logowania.Count)</a>
                    <a asp-area="" asp-controller="Account" asp-action="Logout" class="buttonEdit b">Wyloguj</a>
                </li>
            </ul>
        </div>
    </div>
</div>

 